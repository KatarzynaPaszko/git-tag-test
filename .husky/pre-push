#!/bin/sh

while read localname localhash remotename remotehash;
do
	WORDTOREMOVE="refs/tags/"
	localname=${localname//$WORDTOREMOVE/}
	echo "Error: Attempt to push local tag that does not exist in remote" $localname
	echo "Please make sure you are not pushing tag" $localname 'with your changes.'
	echo "To delete this tag locally, run command:"
	echo " git tag -d" $localname
	echo "If you still want to push this tag, you can disable the check in .git/hooks/pre-push"
	exit 1
done